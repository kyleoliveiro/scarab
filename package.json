{
  "name": "scarab-scss",
  "version": "6.1.1",
  "description": "Sass utility framework for rapid stylesheet development",
  "keywords": [
    "sass",
    "scss",
    "mixins",
    "responsive",
    "front-end"
  ],
  "main": "scarab.scss",
  "scripts": {
    "test": "node-sass scarab.scss -o build/",
    "start": "onchange \"lib/**/*.scss\" -- npm test",
    "build": "sassdoc ./ --config sassdoc.yaml"
  },
  "author": "Kyle Oliveiro <kyle@watchtower.digital>",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/watchtowerdigital/scarab"
  },
  "devDependencies": {
    "node-sass": "^4.1.1",
    "onchange": "^3.2.0",
    "sassdoc": "^2.3.0"
  }
}
